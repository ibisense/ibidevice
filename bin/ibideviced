#!/bin/bash

PID_FILE=../var/pid

if [ "$1" = "start" ]; then
  rc=$?
  if [[ $rc != 0 ]] ; then
    exit $rc
  fi
  nohup node ibideviced.js 1> /dev/null 2> /dev/null &
  PID=$!
  echo "$PID" > $PID_FILE
elif [ "$1" = "stop" ]; then
  kill -9 `cat $PID_FILE`
  rm $PID_FILE
else
  echo "Usage: $0 start|stop"
  exit 1
fi
